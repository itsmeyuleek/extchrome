<p id="notice"><%= notice %></p>

<h1>Color Bar Widgets</h1>

<table>
  <thead>
    <tr>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @color_bar_widgets.each do |color_bar_widget| %>
      <tr>
        <td><%= color_bar_widget.color %></td>
        <td><%= link_to 'Show', color_bar_widget %></td>
        <td><%= link_to 'Edit', edit_color_bar_widget_path(color_bar_widget) %></td>
        <td><%= link_to 'Destroy', color_bar_widget, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Color Bar Widget', new_color_bar_widget_path %>
