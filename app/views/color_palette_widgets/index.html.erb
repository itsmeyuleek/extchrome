<p id="notice"><%= notice %></p>

<h1>Color Palette Widgets</h1>

<table>
  <thead>
    <tr>
      <th>Color</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @color_palette_widgets.each do |color_palette_widget| %>
      <tr>
        <td><%= color_palette_widget.color %></td>
        <td><%= color_palette_widget.type %></td>
        <td><%= link_to 'Show', color_palette_widget %></td>
        <td><%= link_to 'Edit', edit_color_palette_widget_path(color_palette_widget) %></td>
        <td><%= link_to 'Destroy', color_palette_widget, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

