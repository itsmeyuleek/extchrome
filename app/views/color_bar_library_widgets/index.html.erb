<p id="notice"><%= notice %></p>

<h1>Color Bar Library Widgets</h1>

<table>
  <thead>
    <tr>
      <th>Color position</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @color_bar_library_widgets.each do |color_bar_library_widget| %>
      <tr>
        <td><%= color_bar_library_widget.color_position %></td>
        <td><%= color_bar_library_widget.color %></td>
        <td><%= link_to 'Show', color_bar_library_widget %></td>
        <td><%= link_to 'Edit', edit_color_bar_library_widget_path(color_bar_library_widget) %></td>
        <td><%= link_to 'Destroy', color_bar_library_widget, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

